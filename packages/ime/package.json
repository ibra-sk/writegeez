{
  "name": "@writegeez/ime",
  "version": "0.0.2",
  "description": "WriteGeez IME core library (Ge'ez language input).",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ibra-sk/writegeez",
    "directory": "packages/ime"
  },
  "bugs": {
    "url": "https://github.com/ibra-sk/writegeez/issues"
  },
  "homepage": "https://github.com/ibra-sk/writegeez#readme",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch"
  }
}
